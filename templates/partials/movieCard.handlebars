{{#each api}}
<a href="../filmer/{{this.id}}">
  <div class="movie-card" id="{{this.id}}">
    <img
      class="movie-card__poster"
      src="{{this.image.url}}"
      alt="Movie poster for {{this.title}}"
    />
    <div class="movie-card__prime">
      <h2 class="movie-card__title">{{this.title}}</h2>
    </div>
    <button class="movie-card__button">Mer info</button>
  </div>
  </a>
{{/each}}